<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<advancedsettings>
    <video>
        <!-- Hardware acceleration settings -->
        <videoplayer>
            <usevaapi>true</usevaapi>
            <usevdpau>false</usevdpau>
            <prefervaapirender>true</prefervaapirender>
        </videoplayer>

        <!-- HDR optimizations -->
        <hdrtonemapmethod>reinhard</hdrtonemapmethod>
        <hdrtonemaptarget>100</hdrtonemaptarget>
    </video>

    <gui>
        <!-- Optimize for HDR displays -->
        <algorithmdirtyregions>3</algorithmdirtyregions>
        <nofliptimeout>0</nofliptimeout>
    </gui>

    <cache>
        <!-- Optimize buffering for 4K HDR content -->
        <memorysize>134217728</memorysize>
        <readfactor>20</readfactor>
    </cache>
</advancedsettings>
